<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        tools:context=".SegitigaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Luas : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="329dp" android:layout_marginRight="329dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_hitung_segitiga"/>
        <TextView
                android:text="Keliling : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="305dp" android:layout_marginRight="305dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_keliling_segitiga"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginLeft="9dp" android:layout_marginStart="9dp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="296dp"
                android:layout_marginRight="296dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_luas_segitiga"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginLeft="9dp" android:layout_marginStart="9dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="320dp" android:layout_marginRight="320dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_hitung_segitiga"/>
        <EditText
                android:layout_width="381dp"
                android:layout_height="43dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/et_alas_segitiga"
                android:hint="Alas" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="13dp" android:layout_marginRight="13dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="76dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:layout_width="381dp"
                android:layout_height="43dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/et_tinggi_segitiga"
                android:hint="Tinggi" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="13dp" android:layout_marginRight="13dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_alas_segitiga"/>
        <Button
                android:text="Hitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_hitung_segitiga" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/et_tinggi_segitiga"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="307dp"
                android:layout_marginRight="307dp"/>
        <Button
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_share_segitiga" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="305dp" android:layout_marginRight="305dp" android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>